<!--Configuracion de xml/ javaee = Java enter price edition
                                 - JAKARTA EE-->
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="3.0">
    <!--nombre-->
  <display-name>Sesion01</display-name>

    <!--Archivo de bienvenida-->
    <welcome-file-list>
        <!--Determina que "index.jsp" es el archivo de bienvenida-->
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>


    <!--######################### SERVLET  ############################################-->
    <!--definimos que Nuestros servlets esten en la capacidad de establecer
    una conexion con el usuario-->
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>com.cibertec.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

</web-app>